{{!< default}}

{{#page}}

<article class="article {{post_class}}">
    
    {{#if feature_image}}
        <header class="page__header">
            <img class="page__header-img"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1200w,
                        {{img_url feature_image size="xl"}} 1920w"
                sizes="100vw"
                src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            />
        </header>
    {{/if}}

    <section class="article__content">
        <h1 class="article__title">{{title}}</h1>
        {{content}}
    </section>

    {{#get "posts" filter="tag:hash-gem" as |gems|}}
        {{#if gems}}
            <aside class="read-more read-more--gems">
                <h2 class="read-more__title">💎-artikkelit:</h2>

                <div class="article-list">
                    <div class="article-list__wrapper">
                        {{#foreach gems}}
                            {{> "post-card"}}
                        {{/foreach}}
                    </div>
                </div>
            </aside>
        {{/if}}
    {{/get}}

</article>

{{/page}}