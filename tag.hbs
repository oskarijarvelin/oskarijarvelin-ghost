{{!< default}}

{{#tag}}
    <header class="tag__header{{#if feature_image}} tag__header--has-cover{{/if}}">

        {{#if feature_image}}
            <img class="tag__header-img"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1200w,
                        {{img_url feature_image size="xl"}} 1920w"
                sizes="100vw"
                src="{{img_url feature_image size="xl"}}"
                alt="{{title}}"
            />
        {{/if}}

        <div class="tag__header-content">

            <h1 class="tag__header-title">{{name}}</h1>
            
            <div class="tag__meta">
                {{plural ../pagination.total empty='Ei artikkeleita' singular='% artikkeli' plural='% artikkelia'}}
            </div>

            {{#if description}}
                <div class="tag__excerpt">{{description}}</div>
            {{/if}}
            
        </div>
        
    </header>
{{/tag}}

<section class="tag">
    <div class="article-list">
        <h2>Artikkelit</h2>
        <div class="article-list__wrapper">
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</section>
