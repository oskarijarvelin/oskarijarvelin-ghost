{{!< default}}

{{#tag}}
    <header class="tag-header">

        <div class="tag-header__left">

            <h1 class="tag-header__title">{{name}}</h1>
            
            <div class="tag-header__meta">
                {{plural ../pagination.total empty='Ei artikkeleita' singular='% artikkeli' plural='% artikkelia'}}
            </div>

            {{#if description}}
                <div class="tag-header__excerpt">{{description}}</div>
            {{/if}}
            
        </div>

        {{#if feature_image}}
            <div class="tag-header__right">
                <img class="tag-header__img"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1200w,
                            {{img_url feature_image size="xl"}} 1920w"
                    sizes="(max-width: 960px) 100vw, calc(50vw + 40px)"
                    src="{{img_url feature_image size="l"}}"
                    alt="{{title}}"
                />
            </div>
        {{/if}}
        
    </header>
{{/tag}}

<section class="tag">
    <div class="article-list">
        <h2>Artikkelit</h2>
        <div class="article-list__wrapper">
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</section>
