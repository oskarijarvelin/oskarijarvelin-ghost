{{!< default}}

{{#author}}
    <header class="author-header{{#unless cover_image}} author-header--no-cover{{/unless}}">

        <div class="author-header__left">

            <h1 class="author-header__title">
                {{#if profile_image}}
                    <img class="author-header__profile-pic" src="{{profile_image}}" alt="{{name}}" />
                {{/if}}
                {{name}}
            </h1>
            
            <div class="author-header__meta">
                {{plural ../pagination.total empty='Ei artikkeleita' singular='% artikkeli' plural='% artikkelia'}}
                {{#if location}}
                    <span class="author-header__meta-link">{{location}}</span>
                {{/if}}
                {{#if website}}
                    <a class="author-header__meta-link" href="{{website}}" title="Verkkosivu" target="_blank" rel="noopener">{{> "icons/link"}}</a>
                {{/if}}
                {{#if twitter}}
                    <a class="author-header__meta-link" href="{{twitter}}" title="Twitter" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                {{/if}}
                {{#if facebook}}
                    <a class="author-header__meta-link" href="{{facebook}}" title="Facebook" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                {{/if}}
            </div>

            {{#if bio}}
                <div class="author-header__bio">{{bio}}</div>
            {{/if}}
            
        </div>

        {{#if cover_image}}
            <div class="author-header__right">
                <img class="author-header__img"
                    srcset="{{img_url cover_image size="s"}} 300w,
                            {{img_url cover_image size="m"}} 600w,
                            {{img_url cover_image size="l"}} 1200w,
                            {{img_url cover_image size="xl"}} 1920w"
                    sizes="(max-width: 960px) 100vw, calc(50vw + 40px)"
                    src="{{img_url cover_image size="l"}}"
                    alt="{{title}}"
                />
            </div>
        {{/if}}
        
    </header>
{{/author}}

<section class="author">
    <div class="article-list">
        <h2>Artikkelit</h2>
        <div class="article-list__wrapper">
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</section>