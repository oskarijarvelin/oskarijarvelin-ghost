{
    "name": "oskarijarvelin",
    "description": "Ghost theme for oskarijarvelin.fi",
    "demo": "https://oskarijarvelin.fi",
    "version": "1.0.3",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Oskari Järvelin",
        "email": "contact@oskarijarvelin.fi",
        "url": "https://oskarijarvelin.fi/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/oskarijarvelin/tapahtunee-ghost.git"
    },
    "bugs": "https://github.com/oskarijarvelin/tapahtunee-ghost/issues",
    "devDependencies": {
        "@tryghost/release-utils": "^0.7.9",
        "autoprefixer": "10.2.5",
        "beeper": "2.1.0",
        "cssnano": "^5.0.14",
        "gscan": "4.11.1",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "inquirer": "8.0.0",
        "postcss": "^8.4.5",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0",
        "sass": "^1.45.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1280
            },
            "xl": {
                "width": 1920
            }
        },
        "card_assets": true,
        "custom": {
            "title_h1": {
                "type": "text",
                "default": "Title (H1)",
                "group": "homepage"
            },
            "featured_ribbon_text": {
                "type": "text",
                "default": "Featured Ribbon Text",
                "group": "homepage"
            },
            "premium_ribbon_text": {
                "type": "text",
                "default": "Premium Ribbon Text",
                "group": "homepage"
            },
            "linkedin": {
                "type": "text",
                "default": "LinkedIn-url"
            },
            "github": {
                "type": "text",
                "default": "GitHub-url"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Liity T-Crew verkkoyhteisöön",
                "group": "post"
            },
            "email_signup_placeholder": {
                "type": "text",
                "default": "Sähköpostiosoitteesi",
                "group": "post"
            },
            "email_signup_button": {
                "type": "text",
                "default": "Liity",
                "group": "post"
            },
            "show_recent_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "recent_posts_title": {
                "type": "text",
                "default": "Lue lisää -teksti",
                "group": "post"
            }
        }
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    },
    "dependencies": {
        "sanitize.css": "^13.0.0"
    }
}
