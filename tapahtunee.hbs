{{!< default}}

{{#get "tags" filter="slug:tapahtunee" limit="1"}}
    {{#foreach tags}}
        <header class="tag-header">

            <div class="tag-header__left">

                <h1 class="tag-header__title">{{name}}</h1>
                
                {{#if description}}
                    <div class="tag-header__excerpt">{{description}}</div>
                {{/if}}
                
            </div>

            {{#if feature_image}}
                <div class="tag-header__right">
                    <img class="tag-header__img"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1200w,
                                {{img_url feature_image size="xl"}} 1920w"
                        sizes="(max-width: 960px) 100vw, calc(50vw + 40px)"
                        src="{{img_url feature_image size="l"}}"
                        alt="{{title}}"
                    />
                </div>
            {{/if}}
            
        </header>
    {{/foreach}}
{{/get}}

<section class="tag">
    <div class="article-list">
        {{#get "posts" filter="tag:tuotantokausi-2" limit="all" as |tuokkari1|}}
            {{#if tuokkari1}}
                <h2>Tuotantokausi 2</h2>
                <div class="article-list__wrapper-alt">
                    {{#foreach tuokkari1}}
                        {{> "post-card"}}
                    {{/foreach}}
                </div>
            {{/if}}
        {{/get}}

        {{#get "posts" filter="tag:tuotantokausi-1" limit="all" as |tuokkari1|}}
            {{#if tuokkari1}}
                <h2>Tuotantokausi 1</h2>
                <div class="article-list__wrapper-alt">
                    {{#foreach tuokkari1}}
                        {{> "post-card"}}
                    {{/foreach}}
                </div>
            {{/if}}
        {{/get}}
    </div>
</section>
