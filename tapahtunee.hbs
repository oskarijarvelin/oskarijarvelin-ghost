{{!< default}}

{{#get "tags" filter="slug:tapahtunee" limit="1"}}
    {{#foreach tags}}
        <header class="tag__header{{#if feature_image}} tag__header--has-cover{{/if}}">

            {{#if feature_image}}
                <img class="tag__header-img"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1200w,
                            {{img_url feature_image size="xl"}} 1920w"
                    sizes="100vw"
                    src="{{img_url feature_image size="xl"}}"
                    alt="{{title}}"
                />
            {{/if}}

            <div class="tag__header-content">

                <h1 class="tag__header-title">{{name}}</h1>

                {{#if description}}
                    <div class="tag__excerpt">{{description}}</div>
                {{/if}}
                
            </div>
            
        </header>
    {{/foreach}}
{{/get}}

<section class="tag">
    <div class="article-list">
        <h2>Tuotantokausi 2</h2>
        <div class="article-list__wrapper">
            {{#foreach posts filter="tag:tuotantokausi-2"}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>

    {{#get "posts" filter="tag:tuotantokausi-1" limit="all" as |tuokkari1|}}
        {{#if tuokkari1}}
            <h2>Tuotantokausi 1</h2>
            <div class="article-list__wrapper-alt">
                {{#foreach tuokkari1}}
                    {{> "post-card"}}
                {{/foreach}}
            </div>
        {{/if}}
    {{/get}}
</section>
